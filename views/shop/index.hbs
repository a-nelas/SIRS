
<div class="row">
  {{# each products }}
  {{# each this }}
  <p>{{ this.title }}</p>
  <div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img src="{{ this.imagePath }}" alt="tacosdesuadero" class="img-responsive">
    <div class="caption">
      <h3>{{ this.title }}</h3>
      <p>{{ this.description }}</p>
      <div class = "clearfix">
        <div class="price pull-left">{{ this.price }}</div>
          <a href="#" class="btn btn-success pull-right" role="button">Comprar</a></p>
       </div>
     </div>
    </div>
  </div>
  {{/each}}
  {{/each}}
</div>


